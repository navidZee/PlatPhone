<footer class="plus_border">
    <div class="container margin_60_35">
        <div class="row">
            <div class="col-lg-3 col-md-6 col-sm-6">
                <a data-toggle="collapse" data-target="#collapse_ft_1" aria-expanded="false" aria-controls="collapse_ft_1" class="collapse_bt_mobile">
                    <h3> دسترسی سریع</h3>
                    <div class="circle-plus closed">
                        <div class="horizontal"></div>
                        <div class="vertical"></div>
                    </div>
                </a>
                <div class="collapse show" id="collapse_ft_1">
                    <ul class="links">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li><a href="/User/ProfileUser">حساب من</a></li>
                        }
                        <li><a href="/Product/ListProduct">محصولات</a></li>
                        <li><a href="/ShopCart/Index">سبد خرید</a></li>
                        <li><a href="/Home/ContactUs">ارتباط با ما</a></li>
                    </ul>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 col-sm-6">
                <a data-toggle="collapse" data-target="#collapse_ft_2" aria-expanded="false" aria-controls="collapse_ft_2" class="collapse_bt_mobile">
                    <h3>دسته بندی ها</h3>
                    <div class="circle-plus closed">
                        <div class="horizontal"></div>
                        <div class="vertical"></div>
                    </div>
                </a>
                <div class="collapse show" id="collapse_ft_2">
                    <ul class="links">
                        @if (ViewBag.Categories != null)
                        {
                            var Categories = ViewBag.Categories as List<PlatPhone.DataLayer.Category>;

                            foreach (var item in Categories.OrderByDescending(g => g.Id).Take(7))
                            {
                                <li><a href="/Product/ListProduct?Groups=@item.Id&Address=&keyWord=">@item.Name</a></li>
                            }
                        }
                    </ul>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 col-sm-6">
                <a data-toggle="collapse" data-target="#collapse_ft_3" aria-expanded="false" aria-controls="collapse_ft_3" class="collapse_bt_mobile">

                    <div class="circle-plus closed">
                        <div class="horizontal"></div>
                        <div class="vertical"></div>
                    </div>
                </a>
                <div class="collapse show" id="collapse_ft_3">

                </div>
            </div>
            <div class="col-lg-3 col-md-6 col-sm-6">
                <a data-toggle="collapse" data-target="#collapse_ft_4" aria-expanded="false" aria-controls="collapse_ft_4" class="collapse_bt_mobile">
                    <div class="circle-plus closed">
                        <div class="horizontal"></div>
                        <div class="vertical"></div>
                    </div>
                    <h3>دنبال کردن اخبار جدید</h3>
                </a>
                <div class="collapse show" id="collapse_ft_4">
                    <div id="newsletter">
                        <div id="message-newsletter"></div>
                        <form name="newsletter_form" id="newsletter_form">
                            <div class="form-group">
                                <input style="text-align:left" type="email" id="txtNewsletter" class="form-control" placeholder="ایمیل">
                                <input type="button" id="btnSubscribeNewsLetter" value="تایید" class="rounded color-btn-primary">
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</footer>
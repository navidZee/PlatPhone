@model Tuple<PlatPhone.DataLayer.User, bool>
@{
    ViewBag.Title = "پروفایل";
    ViewBag.active = 0;
    var User = Model;
    int row = 1;
}

<style>
    @@media only screen and (max-width: 800) {
        .timeline {
            display: none !important;
        }
    }
</style>

<link href="/client_section/Index.css" rel="stylesheet" />

<main>

    <div class="container" style="padding:20px 0 20px 0">
        <div class="row ">
            <partial name="_UserSideBar" model="Model.Item1" />
            <div class="col-md-9 col-lg-9 col-sm-12 col-xs-12" dir="rtl">
                <div class="row">
                    <div class="col-lg-12 col-md-12 col-xs-12 col-sm-12">
                        <div class="profile-content personInfo" style="min-height:inherit">
                            <div class="PersonalInformation">
                                <div class="row">
                                    <div class="col-lg-12 col-md-12 col-xs-12 col-sm-12">
                                        <h4 class="pull-right">اطلاعات شخصی</h4>
                                        <h4 class="pull-left">
                                            <a href="/User/EditePersonalInformation" class="btn btn-info "
                                               style="border-radius:30px; float:left;">
                                                تغییر اطلاعات شخصی
                                            </a>
                                        </h4>
                                    </div>
                                </div>
                                <br />
                                <div class="row">
                                    <div class="col-lg-3 col-md-6 col-sm-6 col-xs-12 animated animated-">
                                        <p style="height:unset">
                                            <strong>
                                                نام کاربری
                                            </strong>:
                                            @{ if (Model.Item1.UserName != null)
                                                {
                                                    <br />
                                                    @Model.Item1.UserName}
                                                else
                                                {@("-")}
                                            }
                                        </p>
                                    </div>
                                    <div class="col-lg-3 col-md-6 col-sm-6 col-xs-12">
                                        <p style="height:unset">
                                            <strong>
                                                نام و نام خانوادگی
                                            </strong>:
                                            @{ if (Model.Item1.Name != null || Model.Item1.Family != null)
                                                {
                                                    <br />
                                                    @(Model.Item1.Name +" "+ @Model.Item1.Family)}
                                                else
                                                {@("-")}
                                            }
                                        </p>
                                    </div>

                                    <div class="col-lg-3 col-md-6 col-sm-6 col-xs-12">
                                        <p style="height:unset">
                                            <strong>
                                                شماره موبایل
                                            </strong>:
                                            @{ if (Model.Item1.Tell != null)
                                                {
                                                    <br />
                                                    @Model.Item1.Tell}
                                                else
                                                { @("-") }
                                            }
                                        </p>
                                    </div>
                                    <div class="col-lg-3 col-md-6 col-sm-6 col-xs-12">
                                        <p style="height:unset">
                                            <strong> ایمیل :</strong>

                                            @{ if (Model.Item1.Email != null)
                                                {
                                                    <br />
                                                    @Model.Item1.Email}
                                                else
                                                {@("-")}
                                            }
                                        </p>
                                    </div>
                                </div>
                                <div class="row" style="margin-top: 1%"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</main>

@if (Model.Item2)
{
    @section Scripts{
        <script>

            Swal.fire("لطفا پیش از خرید اطلاعات کاربری خود را تکمیل نمایید");
        </script>
    }
}

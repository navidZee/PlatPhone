@model List<PlatPhone.DataLayer.Comment>
@{
    int i = 1;
}

<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <section class="Panel_Withe_Body row" style="margin:7px 2px 2px 0;">
                <br />
                <table class="table table-condensed table-hover" style="border-radius: 0 0 10px 10px">
                    <tr>
                        <td class="font-weight-bold">#</td>
                        <td>نام و نام خانوادگی</td>
                        <td>ایمیل</td>
                        <td>نظر</td>
                        <td>عملیات</td>
                    </tr>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@i</td>

                            <td>@item.Name </td>
                            <td>@item.Email </td>
                            <td>@item.Text</td>

                            <td>
                                <button onclick="ComnfirmComment(@item.Id)" class="btn btn-success btn-xs"><i class="icon-ok"></i></button>
                                <button onclick="RejectdProductStatus(@item.Id)" class="btn btn-danger btn-xs"><i class="icon-remove"></i></button>
                                
                            </td>
                        </tr>
                        i = i + 1;
                    }
                </table>
            </section>
        </section>
    </div>
</div>
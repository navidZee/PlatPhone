@model DataLayer.ClientMenuLink
<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                ویرایش
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            </header>
            <div class="panel-body">
                <form class="form-horizontal" id="default" action="/Admin/ClientMenuLink/Operation"
                      method="post"
                      enctype="multipart/form-data"
                      data-ajax-failure="onFailed"
                      data-ajax-success="onSuccess"
                      data-ajax="true">
                    <input id="Id" name="Id" type="hidden" value="0">
                    <fieldset title="منولینک" class="step" id="default-step-0">
                        <legend></legend>
                        <div class="form-group">
                            <label class="col-lg-2 control-label">عنوان</label>
                            <div class="col-lg-10">
                                <input value="@Model.Title" name="Title" id="Title" type="text" class="form-control" placeholder="عنوان">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-2 control-label">محتویات صفحه</label>
                            <div class="col-lg-10">
                                <textarea class="form-control" name="Content" id="editor1">@Model.Content</textarea>

                            </div>
                        </div>
                    </fieldset>
                    <input type="submit" class="finish btn btn-success" value="ذخیره" />
                </form>
            </div>
        </section>
    </div>
</div>
<!-- page end-->
<!-- page end-->
<script>
    CKEDITOR.replace('editor1');
</script>
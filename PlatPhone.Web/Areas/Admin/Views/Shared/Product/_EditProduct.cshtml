
@model Tuple<DataLayer.Product, List<DataLayer.Category>>


<!-- page start-->
<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                ویرایش محصول

            </header>
            <div class="panel-body">
                <div class="stepy-tab" style="display:none">
                    <ul id="default-titles" class="stepy-titles clearfix">
                        <li id="default-title-0" class="current-step">
                            <div>مرحله اول</div>
                        </li>
                        <li id="default-title-1" class="">
                            <div>مرحله دوم</div>
                        </li>
                        <li id="default-title-2" class="">
                            <div>مرحله نهایی</div>
                        </li>
                    </ul>
                </div>

                <form class="form-horizontal" id="default" action="/Admin/Product/Operation"
                      method="post"
                      enctype="multipart/form-data"
                      data-ajax-failure="onFailed"
                      data-ajax-success="onSuccess"
                      data-ajax="true">

                    <input id="Id" name="Id" type="hidden" value="@Model.Item1.Id">
                    <input id="ImageUrl" name="ImageUrl" type="hidden" value="@Model.Item1.ImageUrl">



                    <div class="form-group">
                        <label class="col-lg-2 control-label">نام محصول</label>
                        <div class="col-lg-10">
                            <input name="Name" required id="Name" type="text" class="form-control" placeholder="نام کامل محصول" value="@Model.Item1.Name">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-lg-2 control-label">کلمات کلیدی</label>
                        <div class="col-lg-10">
                            <input name="Keyword" id="Keyword" type="text" class="form-control" placeholder="کلمات کلیدی" value="@Model.Item1.Keyword">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-lg-2 control-label">دسته بندی</label>
                        <div class="col-lg-10">
                            <select id="CategoryId" required name="CategoryId" class="form-control m-bot15">
                                @foreach (var item in Model.Item2)
                                {
                                    <option @(Model.Item1.CategoryId == item.Id ? "selected='selected'" : "") value="@item.Id">@item.Name</option>
                                }
                            </select>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-lg-2 control-label">قیمت (ریال)</label>
                        <div class="col-lg-4">
                            <input id="Price" required name="Price" type="text" class="form-control" placeholder="قیمت محصول" value="@Model.Item1.Price">
                        </div>
                        <label class="col-lg-2 control-label">تعداد موجود در انبار</label>
                        <div class="col-lg-4">
                            <input id="Inventory" requiredz name="Inventory" type="text" class="form-control" placeholder="تعداد موجود در انبار" value="@Model.Item1.Inventory">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-2 control-label">درصد تخفیف</label>
                        <div class="col-lg-4">
                            <input name="Discount" id="Discount" type="number" min="0" max="100" value="@Model.Item1.Discount" class="form-control" placeholder="میزان درصد تخفیف">
                        </div>


                        <label class="col-lg-2 control-label">آپلود عکس محصول</label>
                        <div class="col-lg-4">
                            <input type="file" name="UploadedFile" />
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-lg-2 control-label">توضیحات</label>
                        <div class="col-lg-10">
                            <textarea id="Description" name="Description" class="form-control" cols="60" rows="12">@Model.Item1.Description</textarea>
                        </div>
                    </div>
                    <input type="submit" class="finish btn btn-danger" value="ذخیره" />
                </form>
            </div>
        </section>
    </div>
</div>
<!-- page end-->

<script>

    $(function () {
        $('#default').stepy({
            backLabel: 'قبلی',
            block: true,
            nextLabel: 'بعدی',
            titleClick: true,
            titleTarget: '.stepy-tab'
        });
    });
</script>

















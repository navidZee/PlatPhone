@model PlatPhone.DataLayer.ViewMadel.CollegeViewModelProduct
@using PlatPhone.DataLayer.Enum
@{
    int i = 1;
}

<div class="row">
    <div class="col-lg-12">

        <section class="panel">
            <section class="Panel_Withe_Body row" style="margin:7px 2px 2px 0;">
                <div class="row">
                    <div class="col-md-2">
                        <button onclick="LoadAddEditProduct()" class="btn btn-block btn-success btn-sm btn-round" data-toggle="modal" data-target=".bd-example-modal-lg" @*data-toggle="modal" data-target="#modal-default"*@>
                            افزودن محصول جدید
                        </button>
                    </div>
                </div>
                <br />

                <table class="table table-condensed table-hover" style="border-radius: 0 0 10px 10px">

                    <tr>
                        <td class="font-weight-bold">#</td>
                        <td>نام محصول</td>
                        <td>دسته بندی</td>
                        <td>قیمت</td>
                        <td>موجودی انبار</td>
                        <td>حذف/ویرایش</td>
                    </tr>

                    @foreach (var item in Model.Product)
                    {
                        var myid = item.Id;
                        <tr>
                            <td>@i</td>

                            <td>@item.Name </td>

                            <td>
                                @foreach (var item2 in Model.Category)
                                {
                                    if (item.CategoryId == item2.Id)
                                    {
                                        @item2.Name

                                    }
                                }
                            </td>

                            <td>@item.Price.ToString("0,#")</td>

                            <td>
                                <span class="badge bg-@(item.Inventory>50?"success":item.Inventory>10?"warning":"important")">@item.Inventory</span>
                            </td>

                            <td>
                                <button onclick="LoadAddEditProduct(@item.Id)"  data-toggle="modal" data-target=".bd-example-modal-lg" class="btn btn-primary editBtn btn-xs"><i class="icon-edit"></i></button>
                                <button onclick="ConfirmDelete(@item.Id)" class="btn btn-danger detailBtn btn-xs"><i class="icon-trash"></i></button>
                            </td>
                        </tr>
                        i = i + 1;
                    }

                </table>
            </section>
        </section>
    </div>
</div>

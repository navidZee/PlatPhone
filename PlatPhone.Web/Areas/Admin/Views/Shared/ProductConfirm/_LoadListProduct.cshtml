@model DataLayer.ViewMadel.CollegeViewModelProduct
@{
    int i = 1;
}
<div class="row">
    <div class="col-lg-12">
        <!--panel 2-->
        <section class="panel">
           <section class="Panel_Withe_Body row" style="margin:7px 2px 2px 0;">
                <br />
                <table class="table table-condensed table-hover" style="border-radius: 0 0 10px 10px">
                    <tr>
                        <td class="font-weight-bold">#</td>
                        <td>نام محصول</td>
                        <td>دسته بندی</td>
                        <td>قیمت</td>
                        <td>موجودی انبار</td>
                        <td>عملیات</td>
                    </tr>
                    @foreach (var item in Model.Product)
                    {
                        var myid = item.Id;
                        <tr>
                            <td>@i</td>
                            <td>@item.Name </td>
                            <td>
                                @foreach (var item2 in Model.Category)
                                {
                                    if (item.CategoryId == item2.Id)
                                    {
                                        @item2.Name
                                    }
                                }
                            </td>

                            <td>@item.Price.ToString("0,#")</td>

                            <td>
                                <span class="badge bg-@(item.Inventory>50?"success":item.Inventory>10?"warning":"important")">@item.Inventory</span>
                            </td>
                            <td>
                                <button onclick="SuccssProductConfirm(@item.Id)" class="btn btn-success btn-xs"><i class="icon-ok"></i></button>
                                <button onclick="FaildProductConfirm(@item.Id)" class="btn btn-danger btn-xs"><i class="icon-remove"></i></button>
                                <a onclick="DetailProductConfirm(@item.Id)" class="btn btn-warning  btn-xs" data-toggle="modal" data-target="#BasicModal"><i class="icon-eye-open"></i></a>
                            </td>
                        </tr>
                        i = i + 1;
                    }
                </table>
            </section>
        </section>
    </div>
</div>


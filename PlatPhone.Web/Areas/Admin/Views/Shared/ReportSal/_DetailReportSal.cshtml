@model List<DataLayer.InvoiceDetail>
@{
    int i = 1;
}

<div class="container ">
    <div class="row">
        <br />
        <p>  جزئیات فروشگاه</p>
        <br />
        <hr />
    </div>

    <div class="row">
        <table class="table table-striped table-hover">
            <tr>
                <td>عنوان محصول</td>
                <td>تعداد</td>
                <td>فی</td>

                <td>جمع</td>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Product.Name</td>
                    <td>@item.Count</td>

                    <td>@item.Product.Price</td>

                    <td>@(item.Product.Price * (int)item.Count)</td>
                    
                </tr>

            }
        </table>
    </div>
</div>

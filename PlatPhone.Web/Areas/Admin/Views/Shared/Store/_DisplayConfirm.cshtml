@model List<DataLayer.Store>
    @{ 
        int i = 1;
    }
<div class="row">
    <div class="col-lg-12">
        <!--panel 2-->
        <section class="panel">
            <section class="Panel_Withe_Body row" style="margin:7px 2px 2px 0;">
                <br />
                <table class="table table-condensed table-hover" style="border-radius: 0 0 10px 10px">
                    <tr>
                        <td class="font-weight-bold">#</td>
                        <td>نام فروشگاه</td>
                        <td>مدیر فروشگاه</td>
                        <td>تلفن ثابت</td>
                        <td>شماره موبایل</td>
                        <td>عملیات</td>
                    </tr>
                    @foreach (var item in Model)
                    {
                        var myid = item.Id;
                        <tr>
                            <td>@i</td>
                            <td>@item.ShopName</td>
                            <td>@item.User.Name @item.User.Family</td>
                            <td>@item.StorePhone</td>
                            <td>@item.Mobile</td>
                            <td>
                                <button onclick="SuccssStoreConfirm(@item.Id)" class="btn btn-success btn-xs"><i class="icon-ok"></i></button>
                                <button onclick="FaildStoreConfirm(@item.Id)" class="btn btn-danger btn-xs"><i class="icon-remove"></i></button>
                                <button onclick="DetailStoreConfirm(@item.Id)" data-toggle="modal" data-target="#myModal2" class="btn btn-warning  btn-xs"><i class="icon-eye-open"></i></button>
                            </td>
                        </tr>
                        i = i + 1;
                    }
                </table>
            </section>
        </section>
    </div>
</div>

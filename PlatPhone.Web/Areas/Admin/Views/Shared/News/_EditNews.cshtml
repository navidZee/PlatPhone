@model DataLayer.News

<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
               اصلاح خبر
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            </header>
            <div class="panel-body">
                <form class="form-horizontal" id="default" action="/Admin/News/Operation"
                      method="post"
                      enctype="multipart/form-data"
                      data-ajax-failure="onFailed"
                      data-ajax-success="onSuccess"
                      data-ajax="true">

                    <input id="Id" name="Id"  type="hidden" value="@Model.Id">
                    <input id="Image" name="Image"  type="hidden" value="@Model.Image">

                    <fieldset title="خبر" class="step" id="default-step-0">
                        <legend></legend>
                        <div class="form-group">
                            <label class="col-lg-2 control-label">عنوان</label>
                            <div class="col-lg-10">
                                <input value="@Model.Title" required="required" name="Title" id="Title" type="text" class="form-control" placeholder="عنوان">
                            </div>
                        </div>                        

                        <div class="form-group">
                            <label class="col-lg-2 control-label">کلمات کلیدی</label>
                            <div class="col-lg-4">
                                <input value="@Model.KeyWord" required="required" name="KeyWord" id="KeyWord" type="text" class="form-control" placeholder="جدا کردن با -">
                            </div>

                            <label class="col-lg-2 control-label">آپلود عکس محصول</label>
                            <div class="col-lg-4">
                                <input  type="file" name="ImageFile" />
                            </div>                            
                        </div>

                        <div class="form-group">
                            <label class="col-lg-2 control-label">توضیح کوتاه</label>
                            <div class="col-lg-10">
                                <textarea class="form-control" name="ShortDescription" required="required" id="ShortDescription">@Model.ShortDescription</textarea>
                            </div>
                        </div>


                        <div class="form-group">
                            <label class="col-lg-2 control-label">خبر</label>
                            <div class="col-lg-10">
                                <textarea class="form-control" style="height:250px" name="Description" required="required" id="Description">@Model.Description</textarea>
                            </div>
                        </div>

                    </fieldset>
                    <input type="submit" class="finish btn btn-success" value="ذخیره" />
                </form>
            </div>
        </section>
    </div>
</div>
<!-- page end-->

<script>

    $(function () {
        $('#default').stepy({
            backLabel: 'قبلی',
            block: true,
            nextLabel: 'بعدی',
            titleClick: true,
            titleTarget: '.stepy-tab'
        });
    });
</script>

